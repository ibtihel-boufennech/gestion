{% extends 'base.html.twig' %}

{% block title %} Message{% endblock %}

{% block body %}
<style>
    #userlist{
      background-color: #F0F3F4;
      border: 1px black solid;
      border-radius: 10px;
    }
    .badge{
      width: 100%;
      height: 35px;
      padding: 2%;
    }
</style>
<div class="row">
<div class="col-4" id="userlist" >
    {% for user in users %}
      <a onclick="setuser()" class="badge badge-light">{{user.username}}</a>
      <br>
    {% endfor %}
</div>
<div class="col-6">
  {{form(form)}}
  <a href="{{path('send_message',{'id':1})}}" class="btn btn-primary">Envoyer</a>
</div>
</div>
{% endblock %}
